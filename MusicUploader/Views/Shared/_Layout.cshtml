<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MusicUploader</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MusicUploader", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", new {area = "", Controller = "Home"})</li>
                    <li>@Html.ActionLink("All uploaded Songs", "Index", new {area = "", controller="Songs"})</li>
                    <li>@Html.ActionLink("All created playlists", "Index", new {area = "", controller="Playlists"})</li>
                    <li>@Html.ActionLink("About", "About", new {area="", controller="Home"})</li>
                    <li>@Html.ActionLink("Contact", "Contact", new {area ="", controller="Home"})</li>
                    @if (User.IsInRole("admin"))
                    {
                        <li>@Html.ActionLink("Genres AP", "Index", new {area = "Admin", controller="Genres"})</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TheRedShoko</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
